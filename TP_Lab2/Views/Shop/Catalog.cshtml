@model List<Product>
@{
    ViewData["Title"] = "Каталог";
}

<p><input style="text-align: left;" hidden="" type="text" value="null" /></p>
<hr />
<h2 style="text-align: center;"><strong>Каталог товаров</strong></h2>
<hr />
<table style="" align="center">
    <tbody>
        <tr>
            <td style="text-align: center; padding: 10px" hidden>id</td>
            <td style="text-align: center; padding: 10px">Название</td>
            <td style="text-align: center; padding: 10px">Тип</td>
            <td style="text-align: center; padding: 10px">Цена</td>
            <td style="text-align: center; padding: 10px">Количество</td>
        </tr>
        @foreach (var product in Model)
        {
            <tr>           
            <td style="text-align: center; padding: 10px">@product.Name</td>
            <td style="text-align: center; padding: 10px">@product.Type</td>
            <td style="text-align: center; padding: 10px">@product.Price</td>
            @using(Html.BeginForm("Catalog", "Shop", FormMethod.Post))
            {               
                <td style="text-align: center; padding: 10px"><input max="100" min="0" step="1" type="number" value="0" name="num"/></td>               
                <td style="text-align: center; padding: 10px">
                    <input type="submit" value="Изменить" />
                </td>
                <td style="text-align: center;"><input hidden value="@product.Id" name="productId"></td>
                <td style="text-align: center;"><input hidden value="@ViewBag.PersonId" name="personId"/></td>
            }               
            </tr>
        }
    </tbody>
</table>

@using(Html.BeginForm("Purchase", "Shop", FormMethod.Get))
{
    <input hidden value="@ViewBag.PersonId" name="personId"/>
    <p style="text-align: center; margin-top: 20px"><input type="submit" value="Оформить заказ" /></p>
}  